# Print a message.
echo "Installing..."
echo "-- install box /usr/local/bin"
sudo install box /usr/local/bin

# Delete the config folder in the home directory if it exists.
if [ -d $HOME/.box ]; then
    echo "-- deleting config from $HOME/.box...";
    rm -rf $HOME/.box
fi

# Now create a new config folder and copy the config to it.
echo "-- copying config to $HOME/.box...";
mkdir $HOME/.box
cp -r config $HOME/.box/

# We're done.
echo "-- done"
exit 0
